/* component/proItem/proItem.wxss */
.pro-img{
  width: 100%;
  height: 710rpx;
}
.pro-item{
  background: #fff;
  box-shadow: 0 0 20rpx rgba(0,0,0,0.2);
  border-radius: 8rpx;
  margin-bottom: 50rpx;
}
.content-all{
  display: flex;
  flex-direction: column;
}
.info{
  padding: 20rpx 20rpx 0;
}
.tit{
  font-size: 27.78rpx;
  color: #000;
  line-height: 39rpx;
  font-family: 'HYg2gj';
  /* font-family: Arial */
}
.fontHyb{
  font-family: 'HYg2gj';
}
.top{
  display: flex;
  flex-direction: row;
  padding: 5rpx 0;
}
.top-list{
  flex: 1;
  display: flex;
  align-items: center;
}
.top-list2{
  display: flex;
  justify-content: flex-end;
}
.txt{
  font-size: 22.22rpx;
  color: #837f80;
  font-family: 'HYg2gj';
  line-height: 24rpx;
}
.txt2{
  font-size: 33.33rpx;
  color: #cf0202;
  line-height: 50rpx;
  font-family: 'Avenir';
  font-weight:500;
}
.btn-content{
  display: flex;
  flex-direction: row;
  padding: 0rpx 20rpx 20rpx;
}
.list{
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 55rpx;
  border: 1rpx solid #837f80;
  /* margin-top: 15rpx; */
}
.left{
  border-radius: 8rpx 0 0 8rpx;
}
.right{
  border-radius: 0 8rpx 8rpx 0;
  background: #837f80;
}
.right1{
  border-radius: 8rpx;
}
.list-txt{
  font-size: 27.78rpx;
  font-family: 'HYg2gj';
  font-weight: bold;
}
.left-txt{
  color: #837f80;
}
.right-txt{
  color: #fff;
  
}