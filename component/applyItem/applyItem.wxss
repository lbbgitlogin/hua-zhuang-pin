/* component/applyItem/applyItem.wxss */
.apply-item{
  display: flex;
  flex-direction: row;
  margin-bottom: 40rpx;
}
.apply-item-left{
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 451rpx;
  overflow: hidden;
}
.apply-item-left-img{
  width: 100%;
  background: none;
}
.apply-item-right{
  flex: 1;
  background: #ffffff;
  box-shadow: 0rpx 0rpx 20rpx rgba(0, 0, 0, 0.2);
  
}
.apply-item-right1{
  align-items: center;
  display:flex;
  flex-direction: column;
  padding: 70rpx 10rpx 50rpx;
}
.apply-item-right2{
  margin-top: 20rpx;
}
.apply-item-img{
  width: 100%;
  /* height: 150rpx; */
  background: none;
}
.app-img-view{
  width: 160rpx;
  height: 150rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}
.apply-item-top{
  color: #2f373d;
  font-size: 27.72rpx;
  /* margin-bottom: 5rpx; */
  line-height: 40rpx;
  font-family: 'HYb1gj';
  /* font-family: Arial; */
  text-align:center;

}
.fontHyb{
  font-family: 'HYb1gj';
}
.apply-item-txt{
  color: #8a8b8c;
  font-size: 22.53rpx;
  /* margin-bottom: 40rpx; */
  font-family: 'HYg2gj';
}
.apply-btn{
  margin: 0;
  padding: 0;
  background: none;
  margin-top: 40rpx;
  border: 1rpx solid #8c8c8c;
  border-radius: 10rpx;
  width: 170rpx;
  height: 42rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  line-height: 40rpx;
}
.apply-btn-txt{
  color: #595b5d;
  font-size: 22.22rpx;
  font-family: 'HYg2gj';
  display: inline-block;
  /* width: 80%; */
  text-align: center;
}
