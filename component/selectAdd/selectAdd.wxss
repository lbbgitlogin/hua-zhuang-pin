/* component/selectAdd/selectAdd.wxss */
@import '../../utils/common.wxss';
.add-content{
  display: flex;
  flex-direction: row;
  background: #ffffff;
  box-shadow: 0rpx 0rpx 20rpx rgba(0,0,0,0.2);
  height: 135rpx;
  align-items: center;
  padding: 0 30rpx;
  margin-bottom: 64rpx;
  border-radius: 0 0 10rpx 10rpx; 
}
.mg35{
  margin-bottom: 35rpx;
}
.no-shadow{
  box-shadow: none;
}
.add-content-left{
  flex: 4;
  display: flex;
  flex-direction: row;
  height: 100%;
  align-items: center;
}
.add-content-right{
  flex: 1;
  display: flex;
  justify-content: flex-end;
}

.add-left-info{
  margin-left: 25rpx;
}
.add-tit{
  color: #000000;
  font-size: 27.78rpx;
  margin-bottom: 10rpx;
  line-height: 39rpx;
  font-family: 'HYg2gj';
}
.add-txt{
  color: #000000;
  font-size: 27.78rpx;
  line-height: 39rpx;
  display: block;
  font-family: 'HYg2gj';
}
