/* pages/logistics/logistics.wxss */
.logistics-all{
  padding: 0 20rpx;
}

.log-right-txt{
  color: #858585;
  font-size: 22.22rpx;
  line-height: 36rpx;
  font-family: 'HYg2gj';
}
.log-right-txt1{
  color: #000000;
}

.log-content{
  box-shadow: 0rpx 0rpx 20rpx rgba(0,0,0,0.2);
  padding: 67rpx 30rpx 0;
  background: #fff;
  position: relative;
  border-radius: 5.3rpx;
}
.log-item{
  display: flex;
  flex-direction: column;
}
.log-list{
  flex: 1;
  display: flex;
  flex-direction: row;
  justify-content: center;
  /* align-items: center */
}
.log-list-last{
  height: 100rpx;
  overflow: hidden
}
.log-left{
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  padding-right: 26rpx;

}
.log-right{
  flex: 3;
  padding: 0rpx 0 37rpx;
  padding-left: 30.5rpx;
  display: flex;
  flex-direction: column;
  border-left: 1rpx solid #dbdada;
  height: 100%;
  position: relative;
  min-height: 95rpx;
}
.log-tit{
  color: #858585;
  font-size: 27.78rpx;
  line-height:36rpx;
  margin-bottom: 10rpx;
  font-family: 'Avenir';
}
.log-txt{
  color: #858585;
  font-size: 16.67rpx;
  font-family: 'Avenir';
}
.log-active-txt{
  color: #000000;
}
