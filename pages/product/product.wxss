/* tips */

.tips-box {
  padding: 0 20rpx;
  box-sizing: border-box;
  width: 100%;
  margin-bottom: 55rpx;
  position: relative;
  overflow: hidden;
}

.tips {
  width: 100%;
}

.title {
  width: 100%;
  height: 117rpx;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 0 20rpx;
  position: relative;
  font-size: 32rpx;
  color: #222;
}

.title view {
  display: flex;
  align-items: center;
}
.title view text{
  font-size: 27.78rpx;
}

.back-icon {
  position: absolute;
  bottom: 40rpx;
  right: 40rpx;
  transition:transform 0.5s;
  transform: rotateZ(-90deg);
}
.tips-box.active .back-icon{
  bottom: 20rpx;
  transform: rotateZ(90deg);
}
.tips-box.active .inner{
  height: 441rpx;
}

.back-img {
  width: 51rpx;
  height: 61rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  background: none;
}
.inner{
  transition:height 0.5s;
  height: 0;
  width: 100%;
  background: #fff;
}
.tips-img{
  width: 452rpx;
  height: 391rpx;
  margin-left: 85rpx;
  margin-bottom: 55rpx;
  background: transparent;
}
