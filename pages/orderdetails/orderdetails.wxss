/* pages/orderdetails/orderdetails.wxss */
.detail-content{
  padding: 0 20rpx;
}
.detail-list{
  background: #fff;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.1);
  position:relative;
  z-index:1;
}
.detail-info{
  padding: 66rpx 33rpx 26rpx;
  border-radius: 10rpx;
  background: #fff;
}
.detail-info-list{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  height: 40rpx;
}
.info-left{
  flex: 1;
  display: flex;
  align-items: center;
}
.info-right{
  flex: 1;
  display: flex;
  justify-content: flex-end;
}
.fb{
  font-weight:500;
}
.info-tit{
  color: #847f7f;
  font-size: 22.22rpx;
  font-family: 'HYg2gj';
}
.ff{
  font-family: 'Avenir';
}
.new-add{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 88rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #fff;
}
.add-txt{
  color: #595b5d;
  font-size: 27.78rpx;
  margin-left: 22rpx;
  font-family: 'HYg2gj';
}
.add-tit{
  color: #595b5d;
  margin-top: -5rpx;
}
.btn-content{
  margin-top: 60rpx;
  padding: 0 20rpx 60rpx;
}
.btn{
  margin-bottom: 30rpx;
  font-size: 27.78rpx;
  font-family: 'HYg2gj';
  color: #fff;
}
.detail-info-content{
  padding: 0 21rpx 0 19rpx;
  margin-top: -40rpx;
  position:relative;
  z-index:0;

}
.contact1{
  bottom: 30rpx;
}
.confirm-icon{
  width: 40rpx;
  height: 35rpx;
  background: none;
}
.cart-bottom{
  display: flex;
  flex-direction: row;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  background: #ffffff;
  align-items: center;
}
.cart-bottom-list{
  flex: 1;
  display: flex;
  height: 100%;
  justify-content: center;
  align-items: center;
}
.cart-bottom-list1{
  justify-content: flex-start;
}
.cart-bottom-list2{
  flex: 2;
}